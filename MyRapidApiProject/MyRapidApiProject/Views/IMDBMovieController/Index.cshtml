@model List<IMDBMovieViewModel>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<table class="table table-bordered">
    <tr>
        <th>Film Görseli</th>
        <th>Film Adı</th>
        <th>Film Türü</th>
        <th>IMDB Puanı</th>
        <th>Sitede Gör</th>
    </tr>
   @foreach (var item in Model)
    {
        <tr>
            <td class="center"><img src="@item.big_image" width="100" height="100"/></td>
            <td>@item.title</td>
            <td>@item.GenreDisplay</td>
            <td>@item.rating</td>
            <td><a href="@item.imdb_link" class="btn btn-outline-warning">Sitede Gör</a></td>
        </tr>
    }
</table>
<style>
    .center {
        text-align: center;
        vertical-align: middle;
    }
</style>